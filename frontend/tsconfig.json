{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": "src",
    "target": "es5",
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/"
  ]
}
