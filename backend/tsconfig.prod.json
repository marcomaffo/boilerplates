{
  "compilerOptions": {
    "target": "ES2020",
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "outDir": "libProd"
  },
  "include": [
    "./src/"
  ],
  "files": [
      "src/global.d.ts",
      "src/types.d.ts"
  ]
}
